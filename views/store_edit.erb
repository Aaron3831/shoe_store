<h1>Update the <%=@store.title() %> store </h1>

<form action="/stores/<%= @store.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="store_name">Rename your store:</label>
  <input id="store_name" name="store_name" type="text">

  <button type="submit">Update</button>
</form>

<form action="/stores/<%= @store.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete store</button>
</form>
